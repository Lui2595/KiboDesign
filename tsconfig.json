{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "es2018.promise"

    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": ["./node_modules"],
    "types": [
      "@types/node",
      "@nuxt/types",
      // "@types/facebook-js-sdk",
      // "@types/facebook-pixel",
      "@types/photoswipe"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "include": [
    "nuxt.config.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
